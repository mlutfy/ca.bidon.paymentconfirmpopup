  <version>1.1</version>
  <develStage>beta</develStage>
  <compatibility>
    <ver>4.2</ver>
    <ver>4.3</ver>
    <ver>4.4</ver>
  </compatibility>
  <comments>No comment.</comments>
  <urls>
    <url desc="Main Extension Page">https://github.com/mlutfy/ca.bidon.paymentconfirmpopup</url>
    <url desc="Documentation">https://github.com/mlutfy/ca.bidon.paymentconfirmpopup/blob/master/README.txt</url>
    <url desc="Support">http://forum.civicrm.org/index.php/board,57.0.html</url>
